@page "/productos"
@rendermode InteractiveServer
@using SistemaFacturacionSRI.Application.DTOs.Producto
@using SistemaFacturacionSRI.Domain.Entities
@using SistemaFacturacionSRI.WebUI.Services
@using SistemaFacturacionSRI.Application.DTOs.Categoria
@using SistemaFacturacionSRI.WebUI.Controllers
@inject ProductoHttpService ProductoService
@inject NavigationManager Navigation

<PageTitle>Productos</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Gestión de Productos</h3>
        <NavLink class="btn btn-sm btn-primary" href="/productos/nuevo">
            Nuevo producto
        </NavLink>
    </div>

    @* Mensajes de éxito/error *@
    @if (!string.IsNullOrEmpty(mensajeExito))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <strong>Éxito:</strong> @mensajeExito
            <button type="button" class="btn-close" @onclick="() => mensajeExito = string.Empty"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(mensajeError))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Error:</strong> @mensajeError
            <button type="button" class="btn-close" @onclick="() => mensajeError = string.Empty"></button>
        </div>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label class="form-label fw-bold">Buscar por nombre o código:</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" @bind="textoBusqueda" @bind:event="oninput" 
                               placeholder="Nombre o código...">
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <label class="form-label fw-bold">Stock:</label>
                    <select class="form-select" @bind="filtroStock">
                        <option value="todos">Todos</option>
                        <option value="conStock">Con Stock</option>
                        <option value="sinStock">Sin Stock</option>
                    </select>
                </div>
                <div class="col-6 col-md-2">
                    <label class="form-label fw-bold">Ordenar por:</label>
                    <select class="form-select" @bind="ordenamiento">
                        <option value="nombre">Nombre</option>
                        <option value="codigo">Código</option>
                        <option value="precio">Precio</option>
                        <option value="stock">Stock</option>
                        <option value="expiracion">Expiración</option>
                    </select>
                </div>
                <div class="col-12 col-md-2">
                    <label class="form-label fw-bold">Categoría:</label>
                    <select class="form-select" @bind="filtroCategoria">
                        <option value="todas">Todas</option>
                        @foreach (var categoria in ProductosFiltrados
                            .Select(p => new CategoriaDto { Id = p.CategoriaId, Nombre = p.CategoriaNombre })
                            .Distinct()
                            .OrderBy(c => c.Nombre))
                        {
                            <option value="@categoria.Id">@categoria.Nombre</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando productos...</p>
        </div>
    }
    else if (productos == null || !productos.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-1"></i>
            <p class="mb-0 mt-2">No hay productos registrados. ¡Crea tu primer producto!</p>
        </div>
    }
    else if (!ProductosFiltrados.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle fs-1"></i>
            <p class="mb-0 mt-2">No se encontraron productos con los filtros aplicados.</p>
        </div>
    }
    else
    {
        <div class="alert alert-secondary">
            Mostrando <strong>@ProductosFiltrados.Count()</strong> de <strong>@productos.Count</strong> productos
        </div>

        <!-- Vista Desktop (tabla completa) -->
        <div class="d-none d-xl-block">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio/Lote</th>
                            <th>IVA</th>
                            <th>Precio c/IVA</th>
                            <th>Stock</th>
                            <th>Categoría</th>
                            <th>Lote Prioritario</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in ProductosFiltrados)
                        {
                            <tr>
                                <td><code class="text-primary">@producto.Codigo</code></td>
                                <td><strong>@producto.Nombre</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(producto.Descripcion))
                                    {
                                        <small class="text-muted">
                                            @(producto.Descripcion.Length > 50 ? producto.Descripcion.Substring(0, 50) + "..." : producto.Descripcion)
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted fst-italic">Sin descripción</small>
                                    }
                                </td>
                                <td>
                                    @if (producto.Precio.HasValue)
                                    {
                                        <strong>$@producto.Precio.Value.ToString("N2")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td><span class="badge bg-info">@producto.TipoIVADescripcion</span></td>
                                <td>
                                    @if (producto.PrecioConIVA.HasValue)
                                    {
                                        <strong class="text-success">$@producto.PrecioConIVA.Value.ToString("N2")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td><span class="badge @(producto.TieneStock ? "bg-success" : "bg-danger")">@producto.Stock</span></td>
                                <td><small>@producto.CategoriaNombre</small></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(producto.LotePrioritario) && producto.FechaExpiracionLotePrioritario.HasValue)
                                    {
                                        var diasParaVencer = (producto.FechaExpiracionLotePrioritario.Value.Date - DateTime.Today).Days;
                                        var colorBadge = ObtenerColorLote(diasParaVencer);
                                        var icono = ObtenerIconoLote(diasParaVencer);

                                        <div class="d-flex flex-column">
                                            <span class="badge @colorBadge mb-1">
                                                <i class="bi @icono me-1"></i>
                                                Lote: @producto.LotePrioritario
                                            </span>
                                            <small class="text-muted">
                                                @producto.FechaExpiracionLotePrioritario.Value.ToString("dd/MM/yyyy")
                                            </small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Sin lotes</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group-vertical" role="group">
                                        <button class="btn btn-sm btn-primary" @onclick="() => VerDetalle(producto.Id)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning" @onclick="() => EditarProducto(producto.Id)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" @onclick="() => MostrarConfirmacionEliminar(producto)" 
                                                disabled="@producto.TieneStock">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Vista Tablet (tabla simplificada) -->
        <div class="d-none d-md-block d-xl-none">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Precio c/IVA</th>
                            <th>Stock</th>
                            <th>Lote</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in ProductosFiltrados)
                        {
                            <tr>
                                <td><code class="text-primary small">@producto.Codigo</code></td>
                                <td>
                                    <strong>@producto.Nombre</strong>
                                    <br/>
                                    <small class="text-muted">@producto.CategoriaNombre</small>
                                </td>
                                <td>
                                    @if (producto.PrecioConIVA.HasValue)
                                    {
                                        <strong class="text-success">$@producto.PrecioConIVA.Value.ToString("N2")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td><span class="badge @(producto.TieneStock ? "bg-success" : "bg-danger")">@producto.Stock</span></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(producto.LotePrioritario))
                                    {
                                        var diasParaVencer = producto.FechaExpiracionLotePrioritario.HasValue 
                                            ? (producto.FechaExpiracionLotePrioritario.Value.Date - DateTime.Today).Days 
                                            : int.MaxValue;
                                        var colorBadge = ObtenerColorLote(diasParaVencer);

                                        <span class="badge @colorBadge">@producto.LotePrioritario</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-primary" @onclick="() => VerDetalle(producto.Id)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning" @onclick="() => EditarProducto(producto.Id)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" @onclick="() => MostrarConfirmacionEliminar(producto)" 
                                                disabled="@producto.TieneStock">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Vista Mobile (cards) -->
        <div class="d-md-none">
            @foreach (var producto in ProductosFiltrados)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="card-title mb-1">@producto.Nombre</h5>
                                <code class="text-primary small">@producto.Codigo</code>
                            </div>
                            <span class="badge @(producto.TieneStock ? "bg-success" : "bg-danger") fs-6">
                                @producto.Stock
                            </span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <small class="text-muted d-block">Categoría</small>
                                <span class="badge bg-secondary">@producto.CategoriaNombre</span>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Precio c/IVA</small>
                                @if (producto.PrecioConIVA.HasValue)
                                {
                                    <strong class="text-success">$@producto.PrecioConIVA.Value.ToString("N2")</strong>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(producto.LotePrioritario) && producto.FechaExpiracionLotePrioritario.HasValue)
                        {
                            var diasParaVencer = (producto.FechaExpiracionLotePrioritario.Value.Date - DateTime.Today).Days;
                            var colorBadge = ObtenerColorLote(diasParaVencer);
                            var icono = ObtenerIconoLote(diasParaVencer);

                            <div class="alert @(diasParaVencer <= 7 ? "alert-danger" : diasParaVencer <= 30 ? "alert-warning" : "alert-success") py-2 mb-3">
                                <small>
                                    <i class="bi @icono me-1"></i>
                                    <strong>Lote @producto.LotePrioritario</strong> - 
                                    Vence: @producto.FechaExpiracionLotePrioritario.Value.ToString("dd/MM/yyyy")
                                    @if (diasParaVencer < 0)
                                    {
                                        <span class="d-block mt-1 fw-bold">¡VENCIDO!</span>
                                    }
                                    else if (diasParaVencer <= 30)
                                    {
                                        <span class="d-block mt-1">(@diasParaVencer días)</span>
                                    }
                                </small>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-sm" @onclick="() => VerDetalle(producto.Id)">
                                <i class="bi bi-eye me-1"></i>Ver Detalles
                            </button>
                            <div class="btn-group" role="group">
                                <button class="btn btn-warning btn-sm" @onclick="() => EditarProducto(producto.Id)">
                                    <i class="bi bi-pencil me-1"></i>Editar
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="() => MostrarConfirmacionEliminar(producto)" 
                                        disabled="@producto.TieneStock"
                                        title="@(producto.TieneStock ? "Tiene stock disponible" : "")">
                                    <i class="bi bi-trash me-1"></i>Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Modal de confirmación para eliminar *@
@if (mostrarModalEliminar)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    @if (productoAEliminar != null)
                    {
                        <p class="mb-3">¿Está seguro que desea eliminar el siguiente producto?</p>
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="mb-1"><strong>Código:</strong> @productoAEliminar.Codigo</p>
                                <p class="mb-1"><strong>Nombre:</strong> @productoAEliminar.Nombre</p>
                                <p class="mb-1"><strong>Categoría:</strong> @productoAEliminar.CategoriaNombre</p>
                                <p class="mb-0"><strong>Stock:</strong> 
                                    <span class="badge @(productoAEliminar.TieneStock ? "bg-danger" : "bg-secondary")">
                                        @productoAEliminar.Stock unidades
                                    </span>
                                </p>
                            </div>
                        </div>

                        @if (productoAEliminar.TieneStock)
                        {
                            <div class="alert alert-danger mt-3 mb-0">
                                <i class="bi bi-exclamation-octagon-fill me-2"></i>
                                <strong>¡Atención!</strong> Este producto tiene <strong>@productoAEliminar.Stock unidades</strong> en stock. 
                                No podrá ser eliminado hasta que agote o elimine los lotes asociados.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mt-3 mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Advertencia:</strong> Esta acción no se puede deshacer.
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar" disabled="@eliminando">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@GetDisabledEliminar()">
                        @if (eliminando)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Eliminando...</span>
                        }
                        else
                        {
                            <i class="bi bi-trash"></i>
                            <span> Eliminar</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ProductoDto>? productos;
    private string textoBusqueda = string.Empty;
    private string filtroStock = "todos";
    private string filtroCategoria = "todas";
    private string ordenamiento = "nombre";
    private bool cargando = true;
    private string mensajeExito = string.Empty;
    private string mensajeError = string.Empty;
    private bool mostrarModalEliminar = false;
    private bool eliminando = false;
    private ProductoDto? productoAEliminar = null;

    private string ObtenerColorLote(int diasParaVencer)
    {
        if (diasParaVencer < 0) return "bg-danger";
        if (diasParaVencer <= 7) return "bg-danger";
        if (diasParaVencer <= 30) return "bg-warning";
        return "bg-success";
    }

    private string ObtenerIconoLote(int diasParaVencer)
    {
        if (diasParaVencer < 0) return "bi-x-circle-fill";
        if (diasParaVencer <= 7) return "bi-exclamation-triangle-fill";
        if (diasParaVencer <= 30) return "bi-clock-fill";
        return "bi-check-circle-fill";
    }

    private void VerDetalle(int id)
    {
        Navigation.NavigateTo($"/productos/detalles/{id}");
    }

    private IEnumerable<ProductoDto> ProductosFiltrados
    {
        get
        {
            if (productos == null) return Enumerable.Empty<ProductoDto>();
            var resultado = productos.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(textoBusqueda))
            {
                resultado = resultado.Where(p =>
                    p.Nombre.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ||
                    p.Codigo.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase)
                );
            }

            resultado = filtroStock switch
            {
                "conStock" => resultado.Where(p => p.TieneStock),
                "sinStock" => resultado.Where(p => !p.TieneStock),
                _ => resultado
            };

            resultado = filtroCategoria != "todas"
                ? resultado.Where(p => p.CategoriaId.ToString() == filtroCategoria)
                : resultado;

            resultado = ordenamiento switch
            {
                "codigo" => resultado.OrderBy(p => p.Codigo),
                "precio" => resultado.OrderBy(p => p.Precio ?? 0m),
                "stock" => resultado.OrderByDescending(p => p.Stock),
                "expiracion" => resultado.OrderBy(p => p.FechaExpiracionLotePrioritario ?? DateTime.MaxValue),
                _ => resultado.OrderBy(p => p.Nombre)
            };

            return resultado;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarProductos();
    }

    private async Task CargarProductos()
    {
        try
        {
            cargando = true;
            mensajeError = string.Empty;
            productos = (await ProductoService.ObtenerTodosAsync()).ToList();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar productos: {ex.Message}";
        }
        finally
        {
            cargando = false;
        }
    }

    private void EditarProducto(int id)
    {
        Navigation.NavigateTo($"/productos/editar/{id}");
    }

    private void MostrarConfirmacionEliminar(ProductoDto producto)
    {
        productoAEliminar = producto;
        mostrarModalEliminar = true;
    }

    private void CancelarEliminar()
    {
        mostrarModalEliminar = false;
        productoAEliminar = null;
    }

    private async Task ConfirmarEliminar()
    {
        if (productoAEliminar == null) return;
        var nombreProducto = productoAEliminar.Nombre;

        try
        {
            eliminando = true;
            mensajeError = string.Empty;
            mensajeExito = string.Empty;

            await ProductoService.EliminarAsync(productoAEliminar.Id);
            
            mensajeExito = $"Producto '{nombreProducto}' eliminado exitosamente";
            mostrarModalEliminar = false;
            productoAEliminar = null;
            await CargarProductos();
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("stock disponible") || ex.Message.Contains("tiene stock"))
            {
                mensajeError = $"No se puede eliminar '{nombreProducto}' porque tiene stock disponible en lotes.";
            }
            else
            {
                mensajeError = $"Error al eliminar: {ex.Message}";
            }

            mostrarModalEliminar = false;
        }
        finally
        {
            eliminando = false;
            productoAEliminar = null;
        }
    }

    private bool GetDisabledEliminar()
    {
        if (eliminando) return true;
        if (productoAEliminar == null) return false;
        return productoAEliminar.TieneStock;
    }
}