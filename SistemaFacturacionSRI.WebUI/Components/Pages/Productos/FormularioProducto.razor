@page "/productos/nuevo"
@page "/productos/editar/{IdProducto:int}"
@using SistemaFacturacionSRI.Application.DTOs.Producto
@using SistemaFacturacionSRI.Application.Interfaces.Services
@using SistemaFacturacionSRI.Domain.Enums
@inject IProductoService ProductoService
@inject NavigationManager Navigation

<PageTitle>@(IdProducto.HasValue ? "Editar Producto" : "Nuevo Producto")</PageTitle>

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h3>@(IdProducto.HasValue ? "Editar Producto" : "Nuevo Producto")</h3>
        </div>
    </div>

    <EditForm Model="@modelo" OnValidSubmit="GuardarProducto">
        <DataAnnotationsValidator />

        <div class="card">
            <div class="card-body">
                @if (!string.IsNullOrEmpty(mensajeError))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> @mensajeError
                        <button type="button" class="btn-close" @onclick="() => mensajeError = string.Empty"></button>
                    </div>
                }

                <div class="row g-3">
                    <!-- Código -->
                    <div class="col-md-6">
                        <label class="form-label">Código *</label>
                        <InputText class="form-control" @bind-Value="modelo.Codigo" placeholder="PROD-001" />
                        <ValidationMessage For="@(() => modelo.Codigo)" />
                    </div>

                    <!-- Nombre -->
                    <div class="col-md-6">
                        <label class="form-label">Nombre *</label>
                        <InputText class="form-control" @bind-Value="modelo.Nombre" placeholder="Nombre del producto" />
                        <ValidationMessage For="@(() => modelo.Nombre)" />
                    </div>

                    <!-- Descripción -->
                    <div class="col-12">
                        <label class="form-label">Descripción</label>
                        <InputTextArea class="form-control" @bind-Value="modelo.Descripcion" rows="3" placeholder="Descripción detallada del producto" />
                        <ValidationMessage For="@(() => modelo.Descripcion)" />
                    </div>

                    <!-- Precio -->
                    <div class="col-md-4">
                        <label class="form-label">Precio *</label>
                        <InputNumber class="form-control" @bind-Value="modelo.Precio" step="0.01" />
                        <ValidationMessage For="@(() => modelo.Precio)" />
                    </div>

                    <!-- Tipo IVA -->
                    <div class="col-md-4">
                        <label class="form-label">Tipo de IVA *</label>
                        <InputSelect class="form-select" @bind-Value="modelo.TipoIVA">
                            <option value="">-- Seleccione --</option>
                            <option value="@TipoIVA.IVA_0">IVA 0%</option>
                            <option value="@TipoIVA.IVA_12">IVA 12%</option>
                            <option value="@TipoIVA.IVA_15">IVA 15%</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => modelo.TipoIVA)" />
                    </div>

                    <!-- Stock -->
                    <div class="col-md-4">
                        <label class="form-label">Stock *</label>
                        <InputNumber class="form-control" @bind-Value="modelo.Stock" />
                        <ValidationMessage For="@(() => modelo.Stock)" />
                    </div>

                    <!-- Unidad de Medida -->
                    <div class="col-md-12">
                        <label class="form-label">Unidad de Medida</label>
                        <InputText class="form-control" @bind-Value="modelo.UnidadMedida" placeholder="Unidad" />
                        <ValidationMessage For="@(() => modelo.UnidadMedida)" />
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary" disabled="@guardando">
                    @if (guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    }
                    <i class="bi bi-save"></i> Guardar
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
            </div>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    public int? IdProducto { get; set; }

    private CrearProductoDto modelo = new();
    private ActualizarProductoDto modeloActualizar = new();
    private bool guardando = false;
    private string mensajeError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (IdProducto.HasValue)
        {
            await CargarProducto();
        }
    }

    private async Task CargarProducto()
    {
        var producto = await ProductoService.ObtenerPorIdAsync(IdProducto!.Value);
        if (producto != null)
        {
            modeloActualizar = new ActualizarProductoDto
            {
                Id = producto.Id,
                Codigo = producto.Codigo,
                Nombre = producto.Nombre,
                Descripcion = producto.Descripcion,
                Precio = producto.Precio,
                TipoIVA = producto.TipoIVA,
                Stock = producto.Stock,
                UnidadMedida = producto.UnidadMedida
            };

            // Para mostrar en el formulario
            modelo.Codigo = producto.Codigo;
            modelo.Nombre = producto.Nombre;
            modelo.Descripcion = producto.Descripcion;
            modelo.Precio = producto.Precio;
            modelo.TipoIVA = producto.TipoIVA;
            modelo.Stock = producto.Stock;
            modelo.UnidadMedida = producto.UnidadMedida;
        }
    }

    private async Task GuardarProducto()
    {
        try
        {
            guardando = true;
            mensajeError = string.Empty;

            if (IdProducto.HasValue)
            {
                // Actualizar
                modeloActualizar.Codigo = modelo.Codigo;
                modeloActualizar.Nombre = modelo.Nombre;
                modeloActualizar.Descripcion = modelo.Descripcion;
                modeloActualizar.Precio = modelo.Precio;
                modeloActualizar.TipoIVA = modelo.TipoIVA;
                modeloActualizar.Stock = modelo.Stock;
                modeloActualizar.UnidadMedida = modelo.UnidadMedida;

                await ProductoService.ActualizarAsync(modeloActualizar);
            }
            else
            {
                // Crear
                await ProductoService.CrearAsync(modelo);
            }

            Navigation.NavigateTo("/productos");
        }
        catch (Exception ex)
        {
            mensajeError = ex.Message;
        }
        finally
        {
            guardando = false;
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/productos");
    }
}