@page "/"
@using SistemaFacturacionSRI.Domain.Entities

<PageTitle>Home</PageTitle>

<div class="container py-4">
    <!-- Header principal -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Bienvenido al Sistema de Facturación</h2>
            <p class="text-muted">Control total de tu tienda de víveres</p>
        </div>
        <img src="imagenes/store.png" alt="Tienda" style="width: 200px; height: auto; border-radius: 0.5rem;" />

    </div>

    <!-- Cards con métricas clave -->
    <div class="row g-4">
        <!-- Total Ventas -->
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary">
                    <h5>Total Ventas</h5>
                </div>
                <div class="card-body">
                    <h4 class="text-success">$12,540</h4>
                    <p class="text-muted small">Ventas acumuladas este mes</p>
                </div>
            </div>
        </div>

        <!-- Productos en Stock -->
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary">
                    <h5>Productos en Stock</h5>
                </div>
                <div class="card-body">
                    <h4 class="text-primary">1,245</h4>
                    <p class="text-muted small">Productos disponibles</p>
                </div>
            </div>
        </div>

        <!-- Clientes -->
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info">
                    <h5>Clientes Registrados</h5>
                </div>
                <div class="card-body">
                    <h4 class="text-primary">324</h4>
                    <p class="text-muted small">Clientes activos</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección rápida de accesos -->
    <hr />
    <h4 class="mb-3">Accesos rápidos</h4>
    <div class="row g-3">
        <div class="col-md-3 col-sm-6">
            <button class="btn btn-primary w-100 py-3">
                <i class="bi bi-plus-square-fill me-2"></i> Nueva Factura
            </button>
        </div>
        <div class="col-md-3 col-sm-6">
            <button class="btn btn-secondary w-100 py-3">
                <i class="bi bi-box-seam me-2"></i> Productos
            </button>
        </div>
        <div class="col-md-3 col-sm-6">
            <button class="btn btn-info w-100 py-3">
                <i class="bi bi-people me-2"></i> Clientes
            </button>
        </div>
        <div class="col-md-3 col-sm-6">
            <button class="btn btn-warning w-100 py-3">
                <i class="bi bi-receipt me-2"></i> Facturas
            </button>
        </div>
    </div>
</div>
